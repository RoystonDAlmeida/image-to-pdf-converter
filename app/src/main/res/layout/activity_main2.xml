<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity2">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="sans-serif-black"
        android:gravity="center_horizontal"
        android:text="Job Application Form"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/filename"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/custom"
        android:ems="10"

        android:hint="File name"
        android:inputType="textPersonName" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:text="NAME:"

                android:textSize="18sp" />

            <EditText
                android:id="@+id/namer"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/custom"
                android:ems="10"

                android:hint="Enter full name.."
                android:inputType="textPersonName"
                android:padding="8dp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:text="Address"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:ems="10"
                android:padding="8dp"

            android:hint="Address.."
                android:background="@drawable/custom"

                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="City"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/city"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:ems="10"
                android:background="@drawable/custom"
                android:padding="8dp"

                android:hint="Current city.."
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email:address"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/gmail"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/custom"
                android:padding="8dp"

                android:ems="10"
                android:hint="email address.."
                android:inputType="textEmailAddress" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Phone no."
                android:textSize="18sp" />

            <EditText
                android:id="@+id/phone"
                android:layout_width="match_parent"
                android:background="@drawable/custom"
                android:padding="8dp"

                android:layout_height="40dp"
                android:ems="10"
                android:hint="phone no."
                android:inputType="phone" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Skills"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/skills"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:ems="10"
                android:padding="8dp"

                android:gravity="start|top"
                android:hint="skills.."
                android:background="@drawable/custom"

                android:inputType="textMultiLine" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Certifications"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/certificate"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:ems="10"
                android:hint="certifications.."
                android:background="@drawable/custom"
                android:padding="8dp"

                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Position sought"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/sought"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:ems="10"
                android:background="@drawable/custom"
                android:padding="8dp"

                android:gravity="start|top"
                android:inputType="textMultiLine" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="Are you currently employed"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/emply"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/custom"
                android:padding="8dp"

                android:ems="10"
                android:inputType="textPersonName" />

            <Button
                android:id="@+id/hrbutton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#3F51B5"
                android:text="Create pdf"

                android:textColor="#FAF4F4" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>