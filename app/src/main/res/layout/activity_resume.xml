<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Resume">

    <TextView
        android:id="@+id/textView13"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:gravity="center_horizontal"
        android:text="RESUME"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:id="@+id/textView15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NAME"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/nam"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/custom"
                android:ems="10"
                android:hint="enter full name"
                android:inputType="textPersonName"
                android:padding="6dp" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Current profession"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/prof"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="14dp"
                android:background="@drawable/custom"
                android:ems="10"
                android:inputType="textPersonName"
                android:padding="6dp" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email address:"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/ml"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:background="@drawable/custom"
                android:ems="10"

                android:hint="gmail.."
                android:inputType="textEmailAddress"
                android:padding="7dp" />

            <TextView
                android:id="@+id/textView18"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Phone no."
                android:textSize="18sp" />

            <EditText
                android:id="@+id/editTextPhone"
                android:layout_width="match_parent"
                android:ems="10"

                android:layout_height="42dp"
                android:background="@drawable/custom"
                android:inputType="phone"
                android:padding="7dp"/>


            <TextView
                android:id="@+id/t"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Address"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/ad"
                android:layout_width="match_parent"
                android:layout_height="42dp"

                android:background="@drawable/custom"
                android:ems="10"
                android:inputType="text"
                android:padding="7dp" />


            <TextView
                android:id="@+id/textV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="linked in"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/linked"
                android:layout_width="match_parent"
                android:layout_height="42dp"

                android:background="@drawable/custom"
                android:ems="10"
                android:hint="linked in profile url"
                android:inputType="text"
                android:padding="7dp" />


            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Skills"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/s1"
                android:layout_width="match_parent"
                android:layout_height="42dp"

                android:layout_marginBottom="8dp"
                android:background="@drawable/custom"
                android:ems="10"
                android:hint="ex:teamwork,coding"
                android:inputType="text"
                android:padding="7dp" />


            <EditText
                android:id="@+id/s2"
                android:layout_width="match_parent"
                android:layout_height="42dp"

                android:layout_marginBottom="8dp"
                android:background="@drawable/custom"
                android:ems="10"
                android:inputType="text"
                android:padding="7dp" />

            <EditText
                android:id="@+id/s3"
                android:layout_width="match_parent"
                android:layout_height="42dp"

                android:layout_marginBottom="12dp"
                android:background="@drawable/custom"
                android:ems="10"
                android:inputType="text"
                android:padding="7dp" />

            <TextView
                android:id="@+id/textVie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Work experience"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/e1"
                android:layout_width="match_parent"
                android:layout_height="42dp"

                android:layout_marginBottom="8dp"
                android:background="@drawable/custom"
                android:ems="10"
                android:inputType="text"
                android:padding="7dp" />


            <EditText
                android:id="@+id/e2"
                android:layout_width="match_parent"
                android:layout_height="42dp"

                android:layout_marginBottom="8dp"
                android:background="@drawable/custom"
                android:ems="10"
                android:inputType="text"
                android:padding="7dp" />

            <EditText
                android:id="@+id/e3"
                android:layout_width="match_parent"
                android:ems="10"

                android:layout_height="42dp"
                android:background="@drawable/custom"
                android:inputType="text"
                android:padding="7dp"/>

            <TextView
                android:id="@+id/textViv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Education"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/edu"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/custom"
                android:ems="10"
                android:hint="enter full name"
                android:inputType="textPersonName"
                android:padding="6dp" />


            <TextView
                android:id="@+id/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Certifications"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/c1"
                android:layout_width="match_parent"
                android:layout_height="42dp"

                android:layout_marginBottom="8dp"
                android:background="@drawable/custom"
                android:ems="10"
                android:inputType="text"
                android:padding="7dp" />


            <EditText
                android:id="@+id/c2"
                android:layout_width="match_parent"
                android:layout_height="42dp"

                android:layout_marginBottom="8dp"
                android:background="@drawable/custom"
                android:ems="10"
                android:inputType="text"
                android:padding="7dp" />

            <EditText
                android:id="@+id/c3"
                android:layout_width="match_parent"
                android:ems="10"

                android:layout_height="42dp"
                android:background="@drawable/custom"
                android:inputType="text"
                android:padding="7dp"/>


            <Button
                android:id="@+id/res"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Create resume"
                android:textColor="#121010" />


        </LinearLayout>
    </ScrollView>

</LinearLayout>